<h1>Editing user</h1>
<%= error_messages_for :user %>
<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
	<%= f.label :login %><br />
	<%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </p>
  <p>
	<%= f.label :password %> *leave blank to keep current password*<br />
	<%= f.password_field :password %>
  </p>
  <p>
	<%= f.label :password_confirmation %> *leave blank to keep current password*<br />
	<%= f.password_field :password_confirmation %>
  </p>
  <p>
    <%= f.label :home_phone %><br />
    <%= f.text_field :home_phone %>
  </p>
  <p>
    <%= f.label :cell_phone %><br />
    <%= f.text_field :cell_phone %>
  </p>
  <p>
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </p>
	<p>
		<%= f.label :country %>
		<%= f.country_select(:country, ["United States", "China", "Spain"]) %>
  </p>
	<p>
		<%= f.label :state %>
		<%= f.select(:state, state_options_for_select(selected = nil)) %>
  </p>
	<p>
		<%= f.label :zip_code %>
		<%= f.text_field :zip_code %>
	<p>
		<%= f.label :birthday %>
		<%= f.date_select('birthday', :discard_year => true, :include_blank => true)%>
  </p>
	<p>
		<%= f.label :aniversary %>
		<%= f.date_select('aniversary', :discard_year => true, :include_blank => true)%>
	</p>
	<br/>
	<p><div class='prepend-1'><h4>Create your own user profile elements of anything you wish to share.</div>
	</p>
	<p>
	  <%= f.label :custom_1_name %> e.g. "My Blog"<br />
	  <%= f.text_field :custom_1_name %>
	</p>
	<p><p><div class='prepend-1'>
	  <%= f.label :custom_1_field %><space> e.g. "www.myawesomeblog.org"</space><br />
	  <%= f.text_field :custom_1_field %>
	</div></p>
	<p>
	  <%= f.label :custom_2_name %><br />
	  <%= f.text_field :custom_2_name %>
	</p>
	<p><div class='prepend-1'>
	  <%= f.label :custom_2_field %><br />
	  <%= f.text_field :custom_2_field %>
	</div></p>
	<p>
	  <%= f.label :custom_3_name %><br />
	  <%= f.text_field :custom_3_name %>
	</p>
	<p><div class='prepend-1'>
	  <%= f.label :custom_3_field %><br />
	  <%= f.text_field :custom_3_field %>
	</div></p>
	<p>
	  <%= f.label :custom_4_name %><br />
	  <%= f.text_field :custom_4_name %>
	</p>
	<p><div class='prepend-1'>
	  <%= f.label :custom_4_field %><br />
	  <%= f.text_field :custom_4_field %>
	</div></p>
    <%= f.submit 'Update', :class => 'awesome button' %>
  </p>
<% end %>
<%= fancy_button('Show', @user, :method => :get, :class => 'awesome button') %>
<%= fancy_button('Back', users_path, :method => :get, :class => 'awesome button') %>


